
package ch.hearc.cours.moo.fibo;

import java.math.BigInteger;

public class Fibonacci
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/
	Fibonacci()
	{
		valN=new BigInteger("0");
		b=new BigInteger("1");
	}
	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/
	BigInteger GetNext()
		{
			BigInteger ret = valN;
			tmp=valN.add(b);
			valN=b;
			b=tmp;
			return ret;
		}
	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/


	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/
	BigInteger valN;
	BigInteger b;
	BigInteger tmp;

	}

