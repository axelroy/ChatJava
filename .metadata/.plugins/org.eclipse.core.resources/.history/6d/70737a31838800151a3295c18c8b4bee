
package ch.hearc.cours.moo.generic;

public class Chrono
	{
	
	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/
	
	public Chrono()
		{
		start();
		}
		
	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/
	
	@Override
	public String toString()
		{
		stop();
		long deltaT = arret - depart;
		return deltaT + "";
		}
		
	public void start()
		{
		isRunning = true;
		depart = System.currentTimeMillis();
		}
		
	public void stop()
		{
		if (isRunning)
			{
			arret = System.currentTimeMillis();
			isRunning = false;
			}
		}
		
	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/
	
	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/
	
	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/
	
	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/
	
	//Tools
	private long depart;
	private long arret;
	private boolean isRunning;
	
	}
