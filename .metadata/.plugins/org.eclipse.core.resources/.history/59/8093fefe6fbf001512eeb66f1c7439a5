
package ch.hearc.cours.moo.heritage.animal;

import java.util.LinkedList;
import java.util.List;

public class Zoo
	{
	
	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/
	
	public Zoo(String nom)
		{
		this.nom = nom;
		this.list = new LinkedList<Animals>();
		}
		
	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/
	public boolean add(Animals a)
		{
		return list.add(a);
		}
	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/
	
	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/
	
	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/
	
	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/
	
	// input
	private String nom;
	
	// tools
	private List<Animals> list;
	}
