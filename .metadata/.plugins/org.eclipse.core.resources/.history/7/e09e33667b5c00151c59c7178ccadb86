
package ch.hearc.cours.kitbase;

public class Secondaire
	{
	
	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/
	
	static public void hello()
		{
		// version 1
			{
			int n = 10;
			for(int i = 0; i < n; i++)
				{
				System.out.println("Hel\tlo " + i);
				}
			}
			
		// version 2
			{
			int i = 0;
			
			while(i < 20)
				{
				i++;
				
				System.out.println("Hel\tlo " + i);
				}
			}
			
		//version 3
			{
			int i = 0;
			
			do
				{
				i++;
				System.out.println("Hel\tlo " + i);
				
				} while(i < 30);
			}
			
		}
		
	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/
	
	}
