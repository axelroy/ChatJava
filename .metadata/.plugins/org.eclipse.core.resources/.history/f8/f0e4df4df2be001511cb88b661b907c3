
package ch.hearc.cours.moo.fibo;

import java.math.BigInteger;

public class Fibonacci
	{
	
	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/
	Fibonacci()
	{
		a=new BigInteger("0");
		b=new BigInteger("1");
	}
	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/
	
	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/
	
	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/
	BigInteger GetNext()
	{	
		BigInteger ret = a;
		tmp=a.add(b);
		a=b;
		b=tmp;
		return ret;
	}
	
	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/
	
	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/
	BigInteger a;
	BigInteger b;
	BigInteger tmp;
	
	}

