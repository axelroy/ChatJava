
package ch.hearc.cours.kitbase;

public class Secondaire
	{

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	static public void hello()
		{
		int n = 10;
		// version 1
			{
		
			for(int i = 0; i < n; i++)
				{
				System.out.println("Hel\tlo " + i);
				}
			}

		// version 2
			{
			int i = 0;

			while(i < n)
				{
				i++;
				System.out.println("Hel\tlo " + i);
				}
			}

		//version 3
			{
			int i = 0;

			do
				{
				i++;
				System.out.println("Hel\tlo " + i);
				} while(i < n);
			}

		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	}
